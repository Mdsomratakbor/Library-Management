<style>
    table.dataTable {
        width: 100% !important;
    }
</style>
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Book List</h4>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("Action","Book")" class="btn btn-success btn-sm float-right"><i class="fas fa-plus"></i> Add New</a>
                    }

                </div>
                <div class="card-body">
                    <table id="booktable" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>BookName</th>
                                <th>ISBN</th>
                                <th>AuthorName</th>
                                <th>BookPublish</th>
                                @*<th>PurchaseDate</th>*@
                                <th>Price</th>
                                <th>BookEdition</th>
                                <th>BookQty</th>
                                <th>Action</th>
                                @*<th>EntryDate</th>*@
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>

    
<script>
    $(document).ready(function () {

        $("#booktable").DataTable({
             columns: [
                { 'data': 'BookName' },
                 { 'data': 'Isbn' },
                 { 'data': 'AuthorName' },
                 { 'data': 'BookPublish' },
                //{
                //    'data': 'PurchaseDate',
                //    //'render': function (jsonDate) {
                //    //    var date = new Date(parseInt(jsonDate.substr(6)));
                //    //    var month = date.getMonth() + 1;
                //    //    return date.getDate() + "/" + month + "/" + date.getFullYear();
                //    //}
                //},
                {
                    'data': 'Price',
                    'searchable': false,
                    'sortable': false,
                    'render': function (Price) {
                        return '$ ' + Price;
                    }
                 },
                 { 'data': 'BookEdition' },
                { 'data': 'BookQty' },
                  {
                    'data': null,
                      render: function (data, type, row) {
                          return '@if (User.IsInRole("Admin")) {<a href ="../Book/Action/' + row.ID + '" class="btn btn-xs btn-info mr-1"><i class="fas fa-edit"></i></a> <button class="btn-trash btn btn-danger btn-xs" data-id="' + row.ID +'"> <i class="fas fa-trash"></i></button> }';
                    }
                },
                //{
                //    'data': 'EntryDate',
                //    //'render': function (jsonDate) {
                //    //    var date = new Date(parseInt(jsonDate.substr(6)));
                //    //    var month = date.getMonth() + 1;
                //    //    return date.getDate() + "/" + month + "/" + date.getFullYear();
                //    //}
                //},
            ],

            "responsive": true,
            "autoWidth": true,
            "lengthChange": true,
            bServerSide: true,
            sAjaxSource: '@Url.Action("ListOfBook", "Book")'

        })
        $('.dataTable').on('click','.btn-trash',function () {
            let bookId = $(this).attr('data-id');
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        method: 'Get',
                        url: '@Url.Action("Delete","Book")',
                        data: { id: bookId }
                    }).done(function (response) {
                        if (response.Success) {
                            Swal.fire(
                                'Deleted!',
                                response.Message,
                                'success'
                            )
                            window.setTimeout(function () {
                                window.location.reload();
                            }, 1500)
                        }
                        else {
                            Swal.fire(
                                'Deleted!',
                                response.Message,
                                'warning'
                            )
                        }
                    })
                }
            })
        })
    });

</script>


