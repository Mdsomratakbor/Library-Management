<style>
    table.dataTable {
        width: 100% !important;
    }
</style>
<div class="card">
    <div class="card-header">
        <h4 class="card-title">Role Menu List</h4>
        <a href="@Url.Action("Action","MenuRole")" class="btn btn-success btn-sm float-right"><i class="fas fa-plus"></i> Add New</a>
    </div>
    <div class="card-body">
        <table id="menuroletable" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Role Name</th>
                    <th>Menu Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {

        $("#menuroletable").DataTable({
             columns: [
                { 'data': 'Menus.MenuName' },
                 { 'data': 'Menus.MenuName' },
                  {
                    'data': null,
                      render: function (data, type, row) {
                          return '<button class="btn-trash btn btn-danger btn-xs" data-id="' + row.ID +'"> <i class="fas fa-trash"></i></button>';
                    }
                },
            ],

            "responsive": true,
            "autoWidth": true,
            "lengthChange": true,
            bServerSide: true,
            sAjaxSource: '@Url.Action("ListOfMenuRole", "MenuRole")'

        })
        $('.dataTable').on('click','.btn-trash',function () {
            let bookId = $(this).attr('data-id');
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        method: 'Get',
                        url: '@Url.Action("Delete","MenuRole")',
                        data: { id: bookId }
                    }).done(function (response) {
                        if (response.Success) {
                            Swal.fire(
                                'Deleted!',
                                response.Message,
                                'success'
                            )
                            window.setTimeout(function () {
                                window.location.reload();
                            }, 1500)
                        }
                        else {
                            Swal.fire(
                                'Deleted!',
                                response.Message,
                                'warning'
                            )
                        }
                    })
                }
            })
        })
    });

</script>



